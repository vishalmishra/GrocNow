<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev1.vishalmishra.grocnow.Launcher"
    android:background="@drawable/cal_back_gradient"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="86dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">
    <ImageView android:src="@drawable/gnlogo"
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginBottom="54dp"
        android:layout_gravity="center_horizontal" />
        <com.romainpiel.shimmer.ShimmerTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shimmertv"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center_horizontal|top"
            android:textSize="30dp"
            android:textStyle="bold"
            android:paddingTop="195dp"
            android:text="GrocNow"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true" />

</LinearLayout>
</LinearLayout>