<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev1.vishalmishra.grocnow.MainActivity"
    android:background="@drawable/cal_back_gradient"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView android:src="@drawable/gnlogo"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="54dp"
            android:layout_gravity="center_horizontal" />

        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"

                android:inputType="textEmailAddress"
                android:hint="Email"
                />
        </android.support.design.widget.TextInputLayout>

        <!-- Password Label -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#d7d7d7">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:inputType="textPassword"
                android:hint="Password"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:textColor="#666"
            android:textSize="16dp"
            android:background="@drawable/bt_login"
            android:textAllCaps="false"
            android:text="Login"/>

        <TextView android:id="@+id/link_signup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:textColor="#fff"
            android:text="No account yet? Create one"
            android:gravity="center"
            android:textSize="16dip"/>
        <!--TextView
            android:layout_height="35dp"
            android:layout_width="match_parent"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="or"
            android:textColor="#ffffff"/>
        <TextView android:id="@+id/link"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:textColor="#fff"
            android:text="login with"
            android:gravity="center"
            android:textSize="16dip"/-->
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            >

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Login with Google"
                android:background="@drawable/glogbutton"
                android:textColorHint="#666"
                android:textSize="16dp"
                android:id="@+id/googlebutton"
                android:drawableStart="@drawable/google_logo"
                android:layout_marginTop="25dp"
                android:paddingLeft="20dp"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

