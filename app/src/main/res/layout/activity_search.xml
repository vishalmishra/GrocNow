<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dev1.vishalmishra.grocnow.search"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/search_back"
        android:background="@drawable/cal_back_gradient"
        android:weightSum="2">
        <EditText
            android:layout_marginTop="15dp"
            android:background="@drawable/bt_search"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:hint="@string/search_for_products_and_more"
            android:paddingEnd="50dp"
            android:paddingStart="30dp"
            android:textColor="#666"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:layout_marginRight="10dp"
            android:id="@+id/search"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:theme="@style/AppTheme2"/>
<ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:id="@+id/bt_search"
    android:background="@drawable/ic_search_white"
    android:layout_marginTop="25dp"
    android:layout_marginRight="15dp"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/srecyclerview"
        android:layout_below="@+id/search_back">
    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
